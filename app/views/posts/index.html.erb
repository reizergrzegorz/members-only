<p>All Posts</p>

<% @posts.each do |post| %>
    <div>
        <% if user_signed_in? %>
            <p>Author: <%= post.user.email %></p>
        <% end %>
        <p>Title: <%= post.title %></p>
        <p>Content: <%= post.body %></p>
    </div><br>
<% end %>

<% if user_signed_in? %>
    <p>Create a new post <%= link_to "here", new_post_path %></p>
    <p>Sign out <%= link_to "here", destroy_user_session_path, method: :delete %></p>
<% else %>
    <p>Sign in <%= link_to "here", user_session_path %></p>
<% end %>